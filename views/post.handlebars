
<section>
  <h2>{{post.title}}</h2>
        <p>By {{post.user.name}} on {{format_date post.date_created}}</p>
        <div class="content">
        <p>{{post.content}}</p>
        </div>
        {{#each post.comments as |comment| }}
        <div class="comment"><p>{{comment.content}}</p></div>
        {{/each}}
        {{#if logged_in}}
        <div id="submit-comment"></div><textarea id="comment-content"></textarea><button id="comment-button" data-id="{{post.id}}">submit comment</button></div>
        {{/if}} 
</section>

<script src="/js/post.js"></script>